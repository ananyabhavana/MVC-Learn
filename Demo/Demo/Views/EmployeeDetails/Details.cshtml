@model Demo.Models.EmployeeDetails

@{
    ViewBag.Title = "Details";
}

<h2> Employee Details</h2>

<table>
    <tr>
        <td>
            <b> Employee ID :</b>
        </td>
        <td>
            @Model.EmployeeIDValue
        </td>
    </tr>
    <tr>
        <td>
            FirstName :
